<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ColorPrimary"
    android:padding="16dp"
    android:layout_marginTop="8dp"
    tools:context=".ForgotPassword">

    <!-- App Name -->
    <TextView
        android:id="@id/app_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="NoteTask"
        android:textSize="22sp"
        android:gravity="center"
        android:letterSpacing="0.5"
        android:layout_margin="12dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/app_name_border"
        android:layout_gravity="center_horizontal" />

    <!-- Space to create a gap -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Forgot password?"
        android:textColor="@color/ColorAccent"
        android:textSize="24sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Verify your account by checking email"
        android:textColor="@color/ColorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold" />


    <!-- Space to create a gap -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6" />

    <EditText
        android:id="@+id/forgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/ColorMenuBar"
        android:hint="Enter your registered email" />

    <!-- Space to create a gap -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/passwordRecoverButton"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_below="@id/forgotPassword"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_shape_round"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:text="Click here to recover" />

    <!-- Space to create a gap -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/gotologin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to login"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="@color/ColorMenuBar"
        />

    <!-- Space to push buttons to the bottom -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3" />

</LinearLayout>