<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="1dp"
                android:color="@color/ColorMenuBar" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/ColorMenuBar" android:endColor="@color/ColorMenuBar"/>
            <solid android:color="@color/ColorMenuBar"/>
            <stroke
                android:width="2dp"
                android:color="@color/ColorMenuBar" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>